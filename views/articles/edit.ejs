<%- include('../partials/head') %> <%- include('../partials/nav') %>
<div class="container custom-container">
  <h1 class="mb-4">Edit ARTICLE</h1>
  <form action="/articles/<%=id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="tile">Title</label>
      <input
        required
        value="<%= article.title %>"
        type="text"
        name="title"
        id="title"
        class="form-control"
      />
    </div>
    <div class="form-group">
      <label for="description">Summary</label>
      <textarea name="description" id="description" class="form-control">
<%= article.description %></textarea
      >
    </div>

    <div class="form-group">
      <label for="markdown">Post</label>
      <textarea required name="markdown" id="markdown" class="form-control">
<%= article.markdown %></textarea
      >
    </div>

    <a href="/articles" class="btn btn-secondary">Cancel</a>
    <button type="submit" value="update" class="btn btn-primary">
      Save Post
    </button>
  </form>
</div>

<%- include('../partials/tail') %>
